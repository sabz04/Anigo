<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:textAllCaps="false"
    android:id="@+id/log_relative"
    tools:context=".Activities.MainActivityLogic.MainActivity">


    <LinearLayout
        android:id="@+id/log_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="AniGO!"
            android:textAlignment="center"
            android:textSize="36dp"></TextView>


        <EditText
            android:id="@+id/loginTB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="Логин"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/regTB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="Пароль"
            android:inputType="textPassword"
            style="@style/Widget.AppCompat.EditText"
            android:textSize="20dp"></EditText>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <Button

                android:layout_width="150dp"
                android:layout_height="55dp"
                android:id="@+id/loginBTN"

                android:backgroundTint="@color/nicered"
                android:fontFamily="@font/roboto_regular"
                android:text="Войти"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18dp"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/password_change_tv"
                android:fontFamily="@font/roboto_regular"
                android:text="Забыли пароль?"
                android:textSize="14dp"></TextView>

        </LinearLayout>




    </LinearLayout>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerTV"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"
        android:text="Регистрация"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"></TextView>

</RelativeLayout>