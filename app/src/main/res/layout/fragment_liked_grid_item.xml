<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:gravity="left"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="107dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="150dp"

            android:id="@+id/view2"
            app:cardCornerRadius="10dp"

            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:shape="rectangle"
            android:thicknessRatio="1.9">
            <ImageView

                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:textSize="15dp"
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Ковбой бибоп"
                android:layout_height="wrap_content"></TextView>
            <TextView

                android:id="@+id/item_score_type"
                android:textSize="13dp"
                android:drawableLeft="@drawable/ic_baseline_star_rate_24"
                android:drawablePadding="3dp"
                android:fontFamily="@font/roboto_regular"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView

                android:textSize="13dp"
                android:id="@+id/item_desc"
                android:layout_width="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_gravity="center_vertical"
                android:text="Рассказ повествует о интересных приключениях Судзумэ и ее команды.."
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/comment_title"
        android:layout_marginBottom="5dp"
        android:textSize="15dp"
        android:text="Заметка"
        android:fontFamily="@font/roboto_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@drawable/rounded_corners_2"
        android:textSize="15dp"
        android:id="@+id/comment_tv"
        android:fontFamily="@font/roboto_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>


</LinearLayout>