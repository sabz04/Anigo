<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            app:columnCount="3"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/back_btn"
                app:layout_column="0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:background="@drawable/back"
                android:layout_marginLeft="25dp"
                android:layout_margin="15dp"
                ></Button>
            <Button
                android:background="@drawable/like"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/like_btn"
                android:layout_margin="15dp"
                app:layout_column="2"
                android:layout_marginRight="25dp"
                ></Button>
        </androidx.gridlayout.widget.GridLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="210dp"
                    android:layout_margin="10dp"
                    android:layout_height="300dp"

                    android:id="@+id/view2"
                    app:cardCornerRadius="10dp"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:shape="rectangle"
                    android:thicknessRatio="1.9">
                    <ImageView

                        android:id="@+id/itemPoster"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"

                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_margin="5dp"
                    android:textSize="22dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_baseline_info_24"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:id="@+id/itemName"
                    android:layout_height="wrap_content"></TextView>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/itemScore"
                        android:textColor="@color/black"
                        android:drawablePadding="10dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/roboto_regular"
                        android:drawableLeft="@drawable/ic_baseline_star_anime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:id="@+id/itemYear"
                        android:textColor="@color/black"
                        android:drawablePadding="10dp"
                        android:textSize="16dp"

                        android:drawableLeft="@drawable/ic_baseline_date_range_24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/itemType"
                        android:drawablePadding="10dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/roboto_regular"
                        android:drawableLeft="@drawable/ic_baseline_tv_24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/item_studios"
                        android:text="Жанры"
                        android:textSize="20dp"
                        android:fontFamily="@font/roboto_bold"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>

                      <com.example.anigo.FlowLayout

                            android:id="@+id/genres_layout"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </com.example.anigo.FlowLayout>


                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/item_genres"
                        android:text="Студии"
                        android:textSize="20dp"

                        android:fontFamily="@font/roboto_bold"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                    <com.example.anigo.FlowLayout

                        android:id="@+id/studios_layout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.example.anigo.FlowLayout>


                </LinearLayout>
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Скриншоты"
                    android:fontFamily="@font/roboto_bold"/>
                <HorizontalScrollView
                    android:layout_gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/screenshotsLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></LinearLayout>
                </HorizontalScrollView>
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Описание"
                    android:fontFamily="@font/roboto_bold"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:textSize="17dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="match_parent"
                    android:id="@+id/itemDesc"
                    android:layout_height="wrap_content"></TextView>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>



</RelativeLayout>