<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AnimeActivityLogic.AnimeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            app:columnCount="3"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/back_btn"
                app:layout_column="0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:background="@drawable/back"
                android:layout_marginLeft="25dp"
                android:layout_margin="15dp"
                ></Button>
            <Button
                android:background="@drawable/like"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:id="@+id/like_btn"
                android:layout_margin="15dp"
                app:layout_column="2"
                android:layout_marginRight="25dp"
                ></Button>
        </androidx.gridlayout.widget.GridLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/main_scroll_view"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:padding="15dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/poster_background_layout"
                    android:gravity="center"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="210dp"
                        android:layout_margin="10dp"
                        android:layout_height="300dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardPreventCornerOverlap="false"
                        android:id="@+id/view2"
                        app:cardCornerRadius="10dp"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"
                        android:shape="rectangle"
                        android:thicknessRatio="1.9">
                        <ImageView
                            android:id="@+id/itemPoster"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/ic_baseline_info_24"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textSize="22dp"></TextView>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/itemScore"
                        android:textColor="@color/black"
                        android:drawablePadding="10dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/roboto_regular"
                        android:drawableLeft="@drawable/ic_baseline_star_anime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:id="@+id/item_date"
                        android:textColor="@color/black"
                        android:drawablePadding="10dp"
                        android:textSize="16dp"

                        android:drawableLeft="@drawable/ic_baseline_date_range_24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/itemType"
                        android:drawablePadding="10dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/roboto_regular"
                        android:drawableLeft="@drawable/ic_baseline_tv_24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"

                        android:id="@+id/item_studios"
                        android:text="Жанры"
                        android:textSize="20dp"
                        android:fontFamily="@font/roboto_bold"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>

                      <com.example.anigo.UiHelper.FlowLayout

                            android:id="@+id/genres_layout"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </com.example.anigo.UiHelper.FlowLayout>


                    <TextView
                        android:layout_marginBottom="10dp"



                        android:id="@+id/item_genres"
                        android:text="Студии"
                        android:textSize="20dp"

                        android:fontFamily="@font/roboto_bold"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                    <com.example.anigo.UiHelper.FlowLayout

                        android:id="@+id/studios_layout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.example.anigo.UiHelper.FlowLayout>


                </LinearLayout>
                <TextView

                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Скриншоты"
                    android:fontFamily="@font/roboto_bold"/>
                <HorizontalScrollView
                    android:layout_gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/screenshotsLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Описание"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/itemDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"

                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:maxHeight="200dp"
                    android:textColor="@color/black"
                    android:textSize="17dp">

                </TextView>
                <Button

                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/show_btn"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/nicered"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Раскрыть"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="16dp"></Button>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Комментарии"
                    android:textSize="20dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/comment_edit_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"></EditText>
                    <Button
                        android:id="@+id/add_comment_btn"
                        android:layout_width="25dp"
                        android:background="@drawable/ic_baseline_send_24"
                        android:layout_height="25dp"></Button>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:id="@+id/comments_grid_view"
                    android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>



</RelativeLayout>